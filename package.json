{
  "name": "portainer-compose",
  "version": "1.0.0",
  "description": "My docker compose files for my home server",
  "main": "./",
  "repository": "git@github.com:pauldiloreto/portainer-compose.git",
  "author": "Paul DiLoreto <paul.diloreto@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@4.1.0",
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@commitlint/types": "^18.6.1",
    "@types/node": "^20.11.19",
    "husky": "^9.0.11"
  },
  "scripts": {
    "update-portainer": "./update-portainer.sh",
    "network-compose": "docker compose -f ./network-compose.yml --env-file ./network.env -p network",
    "media-compose": "docker compose -f ./media-compose.yml --env-file ./media.env -p media",
    "network-up": "yarn network-compose pull && yarn network-compose up -d",
    "media-up": "yarn media-compose pull && yarn media-compose up -d",
    "network-down": "yarn network-compose down",
    "media-down": "yarn media-compose down"
  }
}
